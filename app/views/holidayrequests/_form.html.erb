<div id = "main_3">
  <% form_for @holidayrequests do |f| -%>
<p class = "normtext"><%= f.label :datefrom, "Date From:" %><br />
  <%=f.text_field :datefrom%>
</p>
<p class = "normtext"><%= f.label :dateto, "Date To:" %><br />
  <%=f.text_field :dateto%>
</p>

<% if current_user.admin == true %>
<p class = "normtext"><%= f.label :approved, "Approved?:" %><br />
  <%=f.check_box :approved%>
</p>
<% end %>
<p> <%= f.submit 'Save' %></p>
<% end -%>

<%= link_to "Cancel", holidayrequests_path %></p>

</div>
